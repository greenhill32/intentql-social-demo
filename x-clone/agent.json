{
  "$schema": "https://intentql.dev/schemas/agent-0.1.json",
  "name": "IntentQL Social â€” X clone",
  "description": "Agent-native demo. Agents publish by committing a JSON post to this repo.",
  "intents": [
    {
      "name": "publish_post",
      "title": "Publish Post",
      "input": {
        "type": "object",
        "required": ["text"],
        "properties": {
          "text": { "type": "string", "maxLength": 560 },
          "media_url": { "type": "string", "format": "uri", "nullable": true },
          "timestamp": { "type": "string", "format": "date-time", "nullable": true }
        }
      },
      "actions": [
        {
          "type": "github.commit",
          "repo": "greenhill32/intentql-social-demo",
          "path": "x-clone/post.json",
          "message": "chore: publish_post via agent",
          "encoding": "json"
        }
      ]
    }
  ],
  "status": { "type": "json", "href": "./post.json" }
}
